<h2 class="page-header">Create Portfolio</h2>



<% if (errors && errors.length!==0) { %>
   <% errors.forEach(function(error){ %>
        <div class="alert alert-danger"><%= error.msg %></div>
    <% }); %>
<% } %>
<form method="post" enctype="multipart/form-data" action="/portfolios/create">
   <div class="form-group">
    <label> Name </label>
    <input type="text" class="form-control" placeholder="Name" name="name">
  </div>
  <div class="form-group">
    <label>Profile Picture</label>
    <input type="file" class="form-control" name="picture">
  </div>
   <div class="form-group">
    <label>Screenshot</label>
    <input type="file" id="uploadscreenshot" class="form-control" name="screenshot">
  </div>
  <div class="form-group">
    <label>URL</label>
    <input type="url" id="uploadurl" class="form-control" name="url">
  </div>
  </div>
  <div class="form-group">
    <label>Description</label>
    <input type="texr" class="form-control" name="description">
  </div>
  <button type="submit" id="submitportfolio" class="btn btn-default">Create Portfolio</button>

</form>
